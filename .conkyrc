#window settings
# window alignment, other possible values are commented
#alignment top_left
alignment top_right
#alignment bottom_left
#alignment bottom_right
double_buffer yes
background yes
border_width 1
cpu_avg_samples 2
#default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Hack:size=10
gap_x 20
gap_y 60
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type panel
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
#enable compositing for Gnome 3
own_window_argb_visual yes
#Transparency value - higher is less transparent
own_window_argb_value 180
own_window_transparent no
stippled_borders 0
update_interval 1.5
uppercase no
use_spacer none
show_graph_scale no show_graph_range no
#ensure percentages align properly 
short_units yes 
pad_percents 2
top name_width 100 
own_window_colour black

default_color grey
color0 FFFF66 #highlight color
color1 orange #heading color
color2 8B7500 #chart/bar color
           
# Gap between borders of screen and text
#gap_x 10
#gap_y 10
#gap_x 5 
#gap_y 5 
             
# stuff after 'TEXT' will be formatted on screen
TEXT

